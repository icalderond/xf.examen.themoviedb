<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="xf.examen.themoviedb.Views.MainPage"
             BackgroundColor="Transparent">
    <ContentPage.Resources>
        <ResourceDictionary>
            <x:Array x:Key="ListExample" Type="{x:Type x:String}">
                <x:String>a</x:String>
                <x:String>a</x:String>
                <x:String>a</x:String>
                <x:String>a</x:String>
                <x:String>a</x:String>
                <x:String>a</x:String>
            </x:Array>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Frame CornerRadius="20" BackgroundColor="LightSkyBlue"
           Padding="0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <StackLayout Grid.Row="0" HorizontalOptions="Center" VerticalOptions="Center" Padding="10">
                <Label
                   FontSize="Subtitle"
                   FontAttributes="Bold"
                    LineBreakMode="WordWrap"
                   LineHeight="1.3"
                   Text="Hello, what do you want to watch?" TextColor="White"/>
                <Frame CornerRadius="25"
                   HeightRequest="30" VerticalOptions="Center"
                   Padding="1" BackgroundColor="LightBlue">
                    <SearchBar Placeholder="Search" FontSize="Medium" TextColor="White" BackgroundColor="Transparent"/>
                </Frame>
            </StackLayout>
            <Frame Grid.Row="1" BackgroundColor="#1A224C"
               CornerRadius="20" Padding="10,5,10,-5">
                <StackLayout Orientation="Vertical">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>


                        <!--Recommended for you-->
                        <Grid Grid.Row="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="auto"/>
                            </Grid.ColumnDefinitions>
                            <Label Grid.Row="0" Grid.Column="0"
                               Text="RECOMMENDED FOR YOU"
                               FontSize="Micro"
                                   FontAttributes="Bold"
                               TextColor="White"/>
                            <Label Grid.Row="0" Grid.Column="1"
                               Text="See all"
                               FontSize="Micro"
                               TextColor="White"/>

                            <CollectionView
                            Grid.Row="1"
                            Grid.ColumnSpan="2"
                            ItemsSource="{StaticResource ListExample}">
                                <CollectionView.EmptyView>
                                    <Grid>
                                        <Label 
                                           Text="No se encontraron resultados"
                                            TextColor="WhiteSmoke"
                                           HorizontalOptions="Center"
                                           VerticalOptions="Center"/>
                                    </Grid>
                                </CollectionView.EmptyView>
                                <CollectionView.ItemsLayout>
                                    <GridItemsLayout Orientation="Horizontal"
                                                 SnapPointsType="Mandatory"
                                                 SnapPointsAlignment="Start"/>
                                </CollectionView.ItemsLayout>
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Padding="0,10,5,0"
                                         WidthRequest="100">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="auto"/>
                                            </Grid.RowDefinitions>

                                            <Frame CornerRadius="5" Padding="0"
                                           VerticalOptions="Center" HorizontalOptions="Center">
                                                <Image Source="https://images-na.ssl-images-amazon.com/images/I/71GW%2BACNBQL._AC_SY879_.jpg" Aspect="AspectFill"/>
                                            </Frame>
                                            <StackLayout Grid.Row="1" Spacing="0">
                                                <Label Text="Avengers: Endgame"
                                                   LineBreakMode="WordWrap" FontSize="Micro"
                                                   FontAttributes="Bold" HorizontalTextAlignment="Start"
                                                   VerticalTextAlignment="Center"
                                                   TextColor="White"/>
                                                <Label Text="Estrellitas" FontSize="Micro"
                                                   TextColor="White"/>
                                            </StackLayout>
                                        </Grid>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>

                        </Grid>


                        <!--Top Rated-->
                        <Grid Grid.Row="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="auto"/>
                            </Grid.ColumnDefinitions>
                            <Label Grid.Row="0" Grid.Column="0"
                               Text="TOP RATED"
                               FontSize="Micro"
                                   FontAttributes="Bold"
                               TextColor="White"/>
                            <Label Grid.Row="0" Grid.Column="1"
                               Text="See all"
                               FontSize="Micro"
                               TextColor="White"/>

                            <CollectionView
                            Grid.Row="1"
                            Grid.ColumnSpan="2"
                            ItemsSource="{StaticResource ListExample}">
                                <CollectionView.EmptyView>
                                    <Grid>
                                        <Label 
                                           Text="No se encontraron resultados"
                                            TextColor="WhiteSmoke"
                                           HorizontalOptions="Center"
                                           VerticalOptions="Center"/>
                                    </Grid>
                                </CollectionView.EmptyView>
                                <CollectionView.ItemsLayout>
                                    <GridItemsLayout Orientation="Horizontal"
                                                 SnapPointsType="Mandatory"
                                                 SnapPointsAlignment="Start"/>
                                </CollectionView.ItemsLayout>
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Padding="0,10,5,0"
                                         WidthRequest="100">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="auto"/>
                                            </Grid.RowDefinitions>

                                            <Frame CornerRadius="5" Padding="0"
                                           VerticalOptions="Center" HorizontalOptions="Center">
                                                <Image Source="https://images-na.ssl-images-amazon.com/images/I/71GW%2BACNBQL._AC_SY879_.jpg" Aspect="AspectFill"/>
                                            </Frame>
                                            <StackLayout Grid.Row="1" Spacing="0">
                                                <Label Text="Avengers: Endgame"
                                                   LineBreakMode="WordWrap" FontSize="Micro"
                                                   FontAttributes="Bold" HorizontalTextAlignment="Start"
                                                   VerticalTextAlignment="Center"
                                                   TextColor="White"/>
                                                <Label Text="Estrellitas" FontSize="Micro"
                                                   TextColor="White"/>
                                            </StackLayout>
                                        </Grid>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>

                        </Grid>

                        <!--Top Rated-->
                        <Grid Grid.Row="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="auto"/>
                            </Grid.ColumnDefinitions>
                            <Label Grid.Row="0" Grid.Column="0"
                               Text="TOP RATED"
                               FontSize="Micro"
                                   FontAttributes="Bold"
                               TextColor="White"/>
                            <Label Grid.Row="0" Grid.Column="1"
                               Text="See all"
                               FontSize="Micro"
                               TextColor="White"/>

                            <CollectionView
                            Grid.Row="1"
                            Grid.ColumnSpan="2"
                            ItemsSource="{StaticResource ListExample}">
                                <CollectionView.EmptyView>
                                    <Grid>
                                        <Label 
                                           Text="No se encontraron resultados"
                                            TextColor="WhiteSmoke"
                                           HorizontalOptions="Center"
                                           VerticalOptions="Center"/>
                                    </Grid>
                                </CollectionView.EmptyView>
                                <CollectionView.ItemsLayout>
                                    <GridItemsLayout Orientation="Horizontal"
                                                 SnapPointsType="Mandatory"
                                                 SnapPointsAlignment="Start"/>
                                </CollectionView.ItemsLayout>
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Padding="0,10,5,0"
                                         WidthRequest="100">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="auto"/>
                                            </Grid.RowDefinitions>

                                            <Frame CornerRadius="5" Padding="0"
                                           VerticalOptions="Center" HorizontalOptions="Center">
                                                <Image Source="https://images-na.ssl-images-amazon.com/images/I/71GW%2BACNBQL._AC_SY879_.jpg" Aspect="AspectFill"/>
                                            </Frame>
                                            <StackLayout Grid.Row="1" Spacing="0">
                                                <Label Text="Avengers: Endgame"
                                                   LineBreakMode="WordWrap" FontSize="Micro"
                                                   FontAttributes="Bold" HorizontalTextAlignment="Start"
                                                   VerticalTextAlignment="Center"
                                                   TextColor="White"/>
                                                <Label Text="Estrellitas" FontSize="Micro"
                                                   TextColor="White"/>
                                            </StackLayout>
                                        </Grid>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>

                        </Grid>

                    </Grid>
                </StackLayout>
            </Frame>
        </Grid>
    </Frame>
</ContentPage>
